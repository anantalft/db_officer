<%= form_for @table do |f| %>
  <%= f.label(:name, "Table Name:") %>
  <%= f.text_field(:name) %>
<br><br>
  <%= f.fields_for :table_columns do |builder| %>
    <%= render 'field_fields', f: builder %>
  <% end %>

  <%= link_to_add_fields "Add Column", f, :table_columns %>
  <%= f.submit("Save") %>
<% end %>
