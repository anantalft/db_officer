<% if flash[:message] != nil%>
  <div class="message success">
    <ul>
      <li> <i class="fa fa-check fa-lg" aria-hidden="true"></i>
        <%= flash[:message]%></li>
    </ul>
  </div>
<%end%>

<div>
<h3>Table: <%=params[:table_name]%></h3>
<ul class="table-manage">
  <li> <%= link_to_edit(params[:table_name])%></li>
  <li class="delete"> <%= link_to_delete(params[:table_name]) %></li>
</ul>
</div>
<table class="global-table">
  <tr><th>#</th><th>Name</th><th>Type</th><th colspan="2">Action</th></tr>
  <% count = 0%>
  <%@columns.each do |column|%>
    <tr><td><%= count = count + 1%></td><td><%= column.name %></td><td><%=
        column.type.to_s
    %></td><td>
      <ul>
        <li> <%= link_to_edit_column(params[:table_name],column.name)%></li>
        <li class="delete"><%= link_to_delete_column(params[:table_name],column
        .name)
        %></li>
      </ul>

      </td></tr>
  <% end%>
</table>

